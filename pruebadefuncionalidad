<script>
function pad2(num) {
  return (num < 10 ? '0' : '') + num;
}

// Función auxiliar: tipo oración (definida globalmente)
function toSentenceCase(str) {
  if (!str) return "";
  str = String(str).toLowerCase(); // Asegurar que str es un string
  return str.charAt(0).toUpperCase() + str.slice(1);
}

